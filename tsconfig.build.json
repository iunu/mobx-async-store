{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "scripts",
    "jest",
    "**/*.spec.*",
    "**/*.test.*"
  ],
  "include": ["src/**/*.js", "src/**/*.ts"]
}
